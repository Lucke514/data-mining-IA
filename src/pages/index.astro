---
import Layout from '../layouts/Layout.astro';
import { FileUpload } from '../components/FileUpload';
---

<Layout title="Análisis de Datos CSV con IA">
  <main class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto py-12 px-4">
      <h1 class="text-4xl font-bold text-center text-gray-900 mb-8">
        Análisis de Datos CSV con IA
      </h1>
      <p class="text-center text-gray-600 mb-12">
        Sube tu archivo CSV y deja que la IA analice tus datos
      </p>
      <FileUpload client:load />
    </div>
  </main>
</Layout>